---
interface Props{
    teamName: string;
    view: string;
}

const { teamName, view } = Astro.props;
---
<!-- <div class="flex flex-col items-center w-full bg-gradient-to-b from-slate-900 to-slate-800 fixed top-14"> -->
<div class="flex flex-col items-center w-full bg-slate-900 fixed top-14">
        
    <div class="pt-2 text-xl font-bold">
        {teamName}
    </div>

    <div class="flex px-4 py-0 w-full justify-start">
        <a href={`/players/${teamName.replaceAll(" ", "-")}`} class={`px-4 py-2 ${view === "mila" ? "border-b-4 border-indigo-700" : ""}`}>Mila</a>
        <a href={`/fpl/players/${teamName.replaceAll(" ", "-")}/gw/30`} class={`px-4 py-2 ${view === "fpl" ? "border-b-4 border-indigo-700" : ""}`}>FPL</a> 
    </div>
</div>
