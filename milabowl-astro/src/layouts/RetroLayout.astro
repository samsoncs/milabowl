                // First check if we can find a rank class directly
                let current = target;
                let maxDepth = 15;
                
                while (current && maxDepth > 0) {
                    console.log(`üîç Checking element at depth ${15-maxDepth}:`, current.tagName, current.className);
                    
                    // Check for rank- classes (this flexbox table uses rank-1, rank-2, etc.)
                    const classList = current.className || '';
                    const rankMatch = classList.match(/rank-(\d+)/);
                    if (rankMatch) {
                        const rowNumber = parseInt(rankMatch[1]);
                        console.log(`üéØ Found rank class: rank-${rowNumber}`);
                        return {
                            element: current,
                            rowNumber: rowNumber,
                            totalRows: 9
                        };
