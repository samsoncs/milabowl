import Layout from '../../layouts/Layout.astro'
import Award from './_Award'

const winners = [
    {
        award: 'Winner of FPL',
        firstPlace: { name: 'Sam', points: 2574 },
        seccondPlace: { name: 'Anders', points: 2520 },
        thirdPlace: { name: 'Martin', points: 2481 },
        id: 'ts-p-1',
    },
    {
        award: 'Winner of Milabowl',
        firstPlace: { name: 'Eivind', points: 205.18 },
        seccondPlace: { name: 'Malte', points: 166.38 },
        thirdPlace: { name: 'Anders', points: 147.78 },
        id: 'ts-p-2',
    },
    {
        award: 'Winner of FPL Cup',
        firstPlace: { name: 'Mikkel', points: 1 },
        seccondPlace: { name: 'Sam', points: 0 },
        thirdPlace: { name: 'N/A', points: 0 },
        id: 'ts-p-3',
    },
    {
        award: 'Winner of FPL H2H',
        firstPlace: { name: 'Anders', points: 77 },
        seccondPlace: { name: 'Eivind', points: 69 },
