---

<Layout title="Milabowl - Awards - 2023">
    <div class="mx-auto flex max-w-screen-lg flex-col space-y-4">
        <div class="flex flex-col items-center">
            <div
                class="mb-8 text-center text-2xl font-bold text-indigo-900 dark:text-dark-text"
            >
                MilaAwards - 2023
            </div>
            <div class="md:grid md:grid-cols-2 md:gap-8">
                {
                    winners.map((w) => (
                        <Award
                            title={w.award}
                            firstPlace={w.firstPlace}
                            seccondPlace={w.seccondPlace}
                            thirdPlace={w.thirdPlace}
                            id={w.id}
                            client:idle
                        />
                    ))
                }
            </div>
        </div>
    </div>
</Layout>
