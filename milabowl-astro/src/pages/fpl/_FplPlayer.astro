---
export interface Props {
    name: string;
    info: string;
    pos?: string;
}
const { name, info, pos } = Astro.props;
---
<div class="flex flex-col items-center gap-1">
    {
        pos &&
        <div class="flex justify-center text-sm">{pos}</div>
    }
    <div class="bg-red-400 w-9 h-12"/>
    <div>
        <div class="flex justify-center text-sm py-0.5 px-1 bg-indigo-800 rounded-t-sm">
            {name}
        </div>
        <div class="flex justify-center text-sm bg-slate-900 bg-opacity-20 p-0.5 rounded-b-sm">
            {info}
        </div>
    </div>
<div/>
