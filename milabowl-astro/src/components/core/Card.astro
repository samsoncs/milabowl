---
export interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<div
  class="h-full space-y-2 rounded-md border-t border-slate-100 bg-white p-4 shadow-sm dark:border-slate-800 dark:bg-slate-900 dark:shadow-sm-dark"
>
  {
    title && (
      <div class="mb-3 flex items-center md:mb-5">
        <div class=" grow font-bold text-indigo-900 dark:text-dark-text md:text-xl">
          {title}
        </div>
        <div class="text-sm dark:text-dark-text md:text-base">
          <slot name="secondary" />
        </div>
      </div>
    )
  }
  <div class="h-full overflow-x-auto text-base dark:text-dark-text">
    <slot />
  </div>
</div>
